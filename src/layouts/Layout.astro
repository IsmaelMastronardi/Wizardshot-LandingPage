---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&display=swap" rel="stylesheet">
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&display=swap" rel="stylesheet">
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Mulish:ital,wght@0,200..1000;1,200..1000&display=swap" rel="stylesheet">
		<link href="https://fonts.cdnfonts.com/css/alphabetized-cassette-tapes" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	@tailwind base;
  @tailwind components;
  @tailwind utilities;
	body {
		@apply font-mulish
	}
	.menuLink {
		@apply font-openSans text-lg text-customGray2 pb-8 lg:pb-0 lg:text-sm
	}
	.title-text {
		@apply font-jakartaSans font-extrabold text-4xl lg:text-5xl
	}
	.sub-title-text {
		@apply font-jakartaSans font-extrabold text-3xl lg:mt-10 lg:mb-4
	
	}
	.featuresTitles {
		@apply font-jakartaSans text-2xl text-customLightGray3 z-10 underline lg:text-4xl lg:mt-3
	}
	.featuresText {
		@apply font-openSans text-xxs text-customLightGray3 z-10 flex items-end lg:text-base
	}
	.accordeonTitle {
		@apply font-jakartaSans font-bold text-customGray2 mb-4  flex justify-between
	}
	.accordeonText {
		@apply font-openSans font-medium text-sm text-customGray2 mb-4
	}
	.footerSubTitle {
		@apply  font-bold text-customGray2 text-2xl pb-2
	
	}
	.footerText {
		@apply font-semibold text-lg text-customGray2
	}
	.footerTextSmall {
		@apply font-bold text-sm lg:text-xs
	}
	.button1 {
		@apply bg-customBlack text-white px-4 py-2 rounded-lg flex text-sm active:bg-customLightGray3 hover:bg-customGray transition-all duration-100 cursor-pointer
	}
	.buttonHover {
		@apply active:bg-customLightGray3 hover:bg-customGray transition-all duration-100 cursor-pointer
	}
</style>
